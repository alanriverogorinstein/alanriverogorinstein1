---
import Navbar from '@/components/Navbar.astro';
import '@/styles/global.css';

export interface Props {
  pageTitle?: string;
  showNavbar?: boolean;
}

const { pageTitle = '' } = Astro.props;
const showNavbar = Astro.props.showNavbar ?? true;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{pageTitle}</title>

    <!-- Optional: add SEO description, favicon, fonts, etc -->
  </head>
  <body>
    {showNavbar && <Navbar />}
    <main>
      <slot />
    </main>
  </body>
</html>
